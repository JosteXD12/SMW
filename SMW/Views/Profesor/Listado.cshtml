@model IEnumerable<EntidadProfesor>

@{if (User.Identity.IsAuthenticated)
    {

        <html>
        <head>
            <title>Listado de Profesor</title>

            <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
            <script src="https://code.jquery.com/jquery-3.3.1.js"
                    integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
                    crossorigin="anonymous"></script>

        </head>
        <div class="page-header">

            <h3 style="font-weight: 500; overflow: hidden;font-size:medium; background: #A6E3E9;"> Modulo Profesor </h3>


        </div>
        <body style="margin-top:5px">
            <form class="form-horizontal" id="form1">
                <div class="container">
                    <div class="row">
                        <div class="well well-sm">
                            <fieldset>
                                <table class="table table-hover" style="font-size:small">
                                    <thead class="text-primary">
                                        <tr>

                                            <th scope="row">
                                                @Html.DisplayNameFor(model => model.Profesor_cedula)
                                            </th>
                                            <th scope="row">
                                                @Html.DisplayNameFor(model => model.Profesor_nombre)
                                            </th>
                                            <th scope="row">
                                                @Html.DisplayNameFor(model => model.Profesor_primerApellido)
                                            </th>
                                            <th scope="row">
                                                @Html.DisplayNameFor(model => model.Profesor_segundoApellido)
                                            </th>
                                            <th scope="row">
                                                @Html.DisplayNameFor(model => model.Profesor_telefono)
                                            </th>
                                            <th scope="row">
                                                @Html.DisplayNameFor(model => model.Profesor_correoElectronico)
                                            </th>
                                            <th scope="row">
                                                @Html.DisplayNameFor(model => model.Profesor_dirreccion)
                                            </th>

                                        </tr>
                                    </thead>
                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Profesor_cedula)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Profesor_nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Profesor_primerApellido)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Profesor_segundoApellido)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Profesor_telefono)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Profesor_correoElectronico)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Profesor_dirreccion)
                                            </td>


                                            <td>
                                                @Html.ActionLink("Modificar", "modificarProfesor", new { Profesor_id = item.Profesor_id }) |
                                                @Html.ActionLink("Eliminar", "eliminarProfesor", new { Profesor_id = item.Profesor_id },
                                                                new { onclick = "return confirm('Está seguro de borrar este Profesor?');" })
                                            </td>
                                        </tr>

                                    }
                                </table>
                                <span>
                                    @Html.ActionLink("Profesor nuevo", "InsertarProfesor", "Profesor", null, new { @class = "btn btn-primary btn-large" })
                                    @Html.ActionLink(" Panel Admistrador", "ListadoInactivosProfesor", "Profesor", null, new { @class = "btn btn-primary btn-large" })
                                    @Html.ActionLink(" Volver al menu", "VistaMenu", "Menu", null, new { @class = "btn btn-primary btn-large" })
                                </span>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </form>
        </body>
    </html>


}
}}




