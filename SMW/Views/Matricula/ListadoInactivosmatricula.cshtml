@model IEnumerable<EntidadMatricula>
<html>
<head>
    <title>Listado de Estudiante</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>

</head>
<!--hola-->
<body style="margin-top:20px">
    <form class="form-horizontal" id="form1">
        <div class="container">
            <div class="row">
                <div class="well well-sm">
                    <fieldset>
                        <table class="table table-hover" style="font-size:small">
                            <thead class="text-primary">
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Matricula_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Profesor_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Estudiante_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Curso_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Grupo_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Aula_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Horario_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Matricula_comprobante)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Matricula_estado)
                                    </th>
                                   
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Matricula_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Profesor_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Estudiante_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Curso_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Grupo_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Aula_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Horario_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Matricula_comprobante)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Matricula_estado)
                                    </td>
                                   

                                    <td>
                                        @Html.ActionLink("Activar", "ActivarMatricula", new { Matricula_id = item.Matricula_id }) |
                                        @Html.ActionLink("Eliminar", "eliminarAdminMatricula", new { Matricula_id = item.Matricula_id },
                                                        new { onclick = "return confirm('Está seguro de borrar este Matricula?');" })
                                    </td>
                                </tr>

                            }
                        </table>
                        <span>
                            @Html.ActionLink("Volver", "MatriculaLista", "Matricula", null, new { @class = "btn btn-primary btn-large" })
                        </span>
                    </fieldset>
                </div>
            </div>
        </div>
    </form>
</body>
</html>


