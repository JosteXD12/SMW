@model IEnumerable<EntidadMatricula>
<html>
<head>
    <title>Listado de Matricula</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>

</head>
<div class="page-header">

    <h2 style="font-weight: 500; overflow: hidden;font-size:medium; background: #A6E3E9;"> Modulo matricula </h2>


</div>
<body style="margin-top:5px">
    <form class="form-horizontal" id="form1">
        <div class="container">
            <div class="row">
                <div class="well well-sm">
                    <fieldset>
                        <table class="table table-hover" style="font-size:small">
                            <thead class="text-primary">
                                <tr>

                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Matricula_comprobante)
                                    </th>

                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Matricula_comprobante)
                                    </td>


                                    <td>
                                        @Html.ActionLink("Modificar", "modificarMatricula", new { Matricula_id = item.Matricula_id }) |
                                        @Html.ActionLink("Eliminar", "eliminarMatricula", new { Matricula_id = item.Matricula_id },
                                                        new { onclick = "return confirm('Está seguro de borrar este Matricula?');" })
                                    </td>
                                </tr>

                            }
                        </table>
                        <span>
                            @Html.ActionLink("Insertar Matricula", "InsertarMatricula", "Matricula", null, new { @class = "btn btn-primary btn-large" })
                            @Html.ActionLink("Admistrador", "ListadoInactivosmatricula", "Matricula", null, new { @class = "btn btn-primary btn-large" })
                        </span>
                    </fieldset>
                </div>
            </div>
        </div>
    </form>
</body>
</html>
