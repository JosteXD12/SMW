@model IEnumerable<EntidadHorario>
<html>
<head>
    <title>Listado de Profesors</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>

</head>
<!--hola-->
<body style="margin-top:20px">
    <form class="form-horizontal" id="form1">
        <div class="container">
            <div class="row">
                <div class="well well-sm">
                    <fieldset>
                        <table class="table table-hover" style="font-size:small">
                            <thead class="text-primary">
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Horario_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Horario_descripcion)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Horario_dia)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Horario_horainicio)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Horario_horafin)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Horario_estado)
                                    </th>

                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Horario_id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Horario_descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Horario_dia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Horario_horainicio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Horario_horafin)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Horario_estado)
                            </td>
                            <td>
                                @Html.ActionLink("Activar", "ActivarHorario", new { Horario_id = item.Horario_id }) |
                                @Html.ActionLink("Eliminar", "eliminarAdminHorario", new { Horario_id = item.Horario_id },
                                                new { onclick = "return confirm('Está seguro de borrar este Profesor?');" })
                            </td>
                        </tr>

                            }
                        </table>
                        <span>
                            @Html.ActionLink("Volver", "HorarioListado", "Horario", null, new { @class = "btn btn-primary btn-large" })
                        </span>
                    </fieldset>
                </div>
            </div>
        </div>
    </form>
</body>
</html>

