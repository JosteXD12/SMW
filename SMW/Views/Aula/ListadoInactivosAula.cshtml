@model IEnumerable<EntidadAula>
<html>
<head>
    <title>Listado de Profesors</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>

</head>
<!--hola-->
<body style="margin-top:20px">
    <form class="form-horizontal" id="form1">
        <div class="container">
            <div class="row">
                <div class="well well-sm">
                    <fieldset>
                        <table class="table table-hover" style="font-size:small">
                            <thead class="text-primary">
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Aula_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Aula_descripcion)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Aula_capacidad)
                                    </th>                                                       
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Aula_Estado)
                                    </th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Aula_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Aula_descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Aula_capacidad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Aula_Estado)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Activar", "ActivarAula", new { Aula_id = item.Aula_id }) |
                                        @Html.ActionLink("Eliminar", "eliminarAdminAula", new { Aula_id = item.Aula_id },
                                                        new { onclick = "return confirm('Está seguro de borrar este Profesor?');" })
                                    </td>
                                </tr>

                            }
                        </table>
                        <span>
                            @Html.ActionLink("Volver", "AulaListado", "Aula", null, new { @class = "btn btn-primary btn-large" })
                        </span>
                    </fieldset>
                </div>
            </div>
        </div>
    </form>
</body>
</html>

