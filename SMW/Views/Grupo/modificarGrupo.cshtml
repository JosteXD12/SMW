@model EntidadGrupo
@{
    ViewBag.Title = "Modificación de Grupo";

}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.2.1.js"
        integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
        crossorigin="anonymous"></script>

<title>Modificación de Grupo</title>

<div style="margin-top:30px; margin-right:10px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          

            <div class="form-group">
                @Html.LabelFor(model => model.Grupo_descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Grupo_descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Grupo_descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
            



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Aceptar" class="btn btn-success" />
                    <input type="submit" value="Cancelar" class="btn btn-danger" />
                </div>
            </div>
        </div>

    }
</div>
